@import '../../style/base.wxss';

.issue {
  padding: 20rpx 20rpx 20rpx 40rpx;
  border-top: thin solid rgba(128, 128, 128, 0.3);
}

.title {
  word-break: break-all;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.desc-comment {
  display: flex;
}

.desc-comment .comment {
  font-size: 24rpx;
  display: flex;
  justify-items: center;
}

.desc-comment image.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.desc {
  font-size: 24rpx;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  margin-right: 8rpx;
}

tag {
  margin-right: 16rpx;
}